<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:paddingHorizontal="33dp"
        android:text="Hi!"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nameTextView"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_white"
        android:paddingHorizontal="33dp"
        android:paddingVertical="40dp">

        <LinearLayout
            android:id="@+id/picLayout"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/male"
                android:scaleType="fitCenter"
                android:src="@drawable/man" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/female"
                android:scaleType="fitCenter"
                android:src="@drawable/woman" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/genderToggleGroup"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/picLayout"
            android:layout_margin="16dp"
            android:weightSum="2"
            app:checkedButton="@id/btnFemale"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMale"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/male"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFemale"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/female"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <LinearLayout
            android:id="@+id/ageLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/genderToggleGroup"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingHorizontal="15dp"
                android:text="@string/age"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ageInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_edit_text"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/weightLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/ageLayout"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingHorizontal="15dp"
                android:text="@string/weight"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/weightInput"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_edit_text"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/weightSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="7dp"
                android:background="@drawable/bg_spinner" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/weightLayout"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingHorizontal="15dp"
                android:text="@string/height"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="135dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/heightInput"
                    android:layout_width="135dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_edit_text"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/black"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/feetInchLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/heightInputFeet"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edit_text"
                        android:hint="ft"
                        android:inputType="number"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/black"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/heightInputInch"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edit_text"
                        android:hint="in"
                        android:inputType="number"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/black"
                        android:textSize="21sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </FrameLayout>


            <Spinner
                android:id="@+id/heightSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="7dp"
                android:background="@drawable/bg_spinner" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/calculateButton"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_button"
            android:text="@string/calculate_your_bmi"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />


    </RelativeLayout>


</RelativeLayout>